# ======================================================
# TalentFlow Backend - EditorConfig
# ======================================================
# Ensures consistent formatting across editors/OS
# ======================================================

root = true

########################################################
# Default for all files
########################################################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2


########################################################
# TypeScript / JavaScript
########################################################
[*.{ts,tsx,js,jsx}]
indent_size = 2


########################################################
# JSON / YAML / Config files
########################################################
[*.{json,yml,yaml}]
indent_size = 2


########################################################
# Markdown
# (don't trim trailing spaces â€” needed for line breaks)
########################################################
[*.md]
trim_trailing_whitespace = false


########################################################
# Prisma schema
########################################################
[*.prisma]
indent_size = 2


########################################################
# Dockerfiles
########################################################
[Dockerfile]
indent_size = 2


########################################################
# Shell scripts
########################################################
[*.sh]
indent_style = space
indent_size = 2


########################################################
# Makefiles (tabs required)
########################################################
[Makefile]
indent_style = tab
