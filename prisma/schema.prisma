generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////////

enum Role {
  ADMIN
  CLIENT
  DEVELOPER
}

enum ProjectStatus {
  OPEN
  MATCHING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ContractStatus {
  PENDING
  ACTIVE
  ENDED
  CANCELLED
}

//////////////////////////////////////////////////////
// CORE AUTH USER
//////////////////////////////////////////////////////

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  developer Developer?
  client    Client?

  @@index([role])
}

//////////////////////////////////////////////////////
// DEVELOPER PROFILE
//////////////////////////////////////////////////////

model Developer {
  id           String   @id @default(uuid())
  userId       String   @unique
  bio          String?
  experience   Int
  hourlyRate   Int
  available    Boolean  @default(true)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  skills       DeveloperSkill[]
  matches      Match[]
  contracts    Contract[]

  @@index([available])
  @@index([hourlyRate])
}

//////////////////////////////////////////////////////
// CLIENT PROFILE
//////////////////////////////////////////////////////

model Client {
  id          String   @id @default(uuid())
  userId      String   @unique
  companyName String
  website     String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  projects    Project[]
}

//////////////////////////////////////////////////////
// SKILLS (NORMALIZED)
//////////////////////////////////////////////////////

model Skill {
  id        String   @id @default(uuid())
  name      String   @unique

  developers DeveloperSkill[]
  projects   ProjectSkill[]
}

//////////////////////////////////////////////////////
// MANY-TO-MANY: Developer ↔ Skill
//////////////////////////////////////////////////////

model DeveloperSkill {
  developerId String
  skillId     String

  developer Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
  skill     Skill     @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([developerId, skillId])
  @@index([skillId])
}

//////////////////////////////////////////////////////
// PROJECTS
//////////////////////////////////////////////////////

model Project {
  id          String        @id @default(uuid())
  clientId    String
  title       String
  description String
  budget      Int
  status      ProjectStatus @default(OPEN)

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  client      Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)

  skills      ProjectSkill[]
  matches     Match[]
  contracts   Contract[]

  @@index([status])
  @@index([budget])
}

//////////////////////////////////////////////////////
// MANY-TO-MANY: Project ↔ Skill
//////////////////////////////////////////////////////

model ProjectSkill {
  projectId String
  skillId   String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  skill   Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([projectId, skillId])
  @@index([skillId])
}

//////////////////////////////////////////////////////
// MATCHING ENGINE
//////////////////////////////////////////////////////

model Match {
  id          String   @id @default(uuid())

  developerId String
  projectId   String

  score       Float
  createdAt   DateTime @default(now())

  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([developerId, projectId])
  @@index([score])
}

//////////////////////////////////////////////////////
// CONTRACTS
//////////////////////////////////////////////////////

model Contract {
  id          String         @id @default(uuid())

  developerId String
  projectId   String

  startDate   DateTime
  endDate     DateTime?
  rate        Int

  status      ContractStatus @default(PENDING)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  developer   Developer @relation(fields: [developerId], references: [id], onDelete: Cascade)
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([status])
}
