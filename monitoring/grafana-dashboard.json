{
  "title": "TalentFlow Backend Metrics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [

    {
      "type": "stat",
      "title": "Request Rate (req/s)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "refId": "A"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Cache Hit Rate",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(cache_hits_total[1m]) / (rate(cache_hits_total[1m]) + rate(cache_misses_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit"
        }
      }
    },

    {
      "type": "stat",
      "title": "Matching Queries / sec",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(match_queries_total[1m])",
          "refId": "A"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Avg Latency (ms)",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(http_request_duration_ms_sum[1m]) / rate(http_request_duration_ms_count[1m])",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "HTTP Requests Rate",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Latency P95",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Cache Hits vs Misses",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(cache_hits_total[1m])",
          "legendFormat": "Hits",
          "refId": "A"
        },
        {
          "expr": "rate(cache_misses_total[1m])",
          "legendFormat": "Misses",
          "refId": "B"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Matching Queries",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(match_queries_total[1m])",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "process_cpu_seconds_total",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Memory Usage (MB)",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "refId": "A"
        }
      ]
    }

  ]
}
